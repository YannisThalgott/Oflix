{% extends 'back/base_back.html.twig' %}

{% block title %}{{ movie.title }}{% endblock %}

{% block body_back %}

    <h1 class="text-center">{{ movie.title }}</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ movie.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ movie.title }}</td>
            </tr>
            <tr>
                <th>ReleaseDate</th>
                <td>{{ movie.releaseDate ? movie.releaseDate|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Duration</th>
                <td>{{ movie.duration }}</td>
            </tr>
            <tr>
                <th>Poster</th>
                <td><img src="{{ movie.poster }}"></td>
            </tr>
            <tr>
                <th>Type</th>
                <td>{{ movie.type }}</td>
            </tr>
            <tr>
                <th>Summary</th>
                <td>{{ movie.summary }}</td>
            </tr>
            <tr>
                <th>Synopsis</th>
                <td>{{ movie.synopsis }}</td>
            </tr>
            <tr>
                <th>Rating</th>
                <td>{{ movie.rating }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('back_movie_index') }}" class="btn btn-primary">back to list</a>
    
    <a href="{{ path('back_movie_edit', {'id': movie.id}) }}" class="btn btn-success">edit</a>

    {{ include('back/movie/_delete_form.html.twig') }}

{% endblock %}
