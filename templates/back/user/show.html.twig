{% extends 'back/base_back.html.twig' %}

{% block title %}User{% endblock %}

{% block body_back %}
    <h1 class="text-center">Utilisateur</h1>
<a href="{{ path('back_user_index') }}" class="btn btn-primary m-3">Retour</a>
<a href="{{ path('back_user_edit', {'id': user.id}) }}" class="btn btn-danger m-3 float-end">Modifier</a>
    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>Roles</th>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
            </tr>
            <tr>
                <th>Password</th>
                <td>{{ user.password }}</td>
            </tr>
        </tbody>
    </table>

    {{ include('back/user/_delete_form.html.twig') }}
{% endblock %}
