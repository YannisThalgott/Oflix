{% extends 'back/base_back.html.twig' %}

{% block title %}User{% endblock %}

{% block body_back %}
    <h1 class="text-center m-3">Liste des utilisateurs</h1>
    <a class="btn btn-primary m-3" href="{{ path('back_user_new') }}">Ajouter l'utilisateur</a>
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Email</th>
                <th>Roles</th>
                <th>Mot de passe</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.email }}</td>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
                <td>{{ user.password }}</td>
                <td>
                    <a class="btn btn-primary" href="{{ path('back_user_show', {'id': user.id}) }}">Voir</a>
                    <a class="btn btn-success" href="{{ path('back_user_edit', {'id': user.id}) }}">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>


{% endblock %}
