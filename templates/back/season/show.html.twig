{% extends 'back/base_back.html.twig' %}

{% block title %}Saison {{ season.number }}{% endblock %}

{% block body_back %}

    <h1>{{ season.number }}</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ season.id }}</td>
            </tr>
            <tr>
                <th>Numéro</th>
                <td>{{ season.number }}</td>
            </tr>
            <tr>
                <th>Nombre d'épisodes</th>
                <td>{{ season.episodesNumber }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('back_season_index') }}" class="btn btn-primary">back to list</a>
    
    <a href="{{ path('back_season_edit', {'id': season.id}) }}" class="btn btn-success">edit</a>

    {{ include('back/season/_delete_form.html.twig') }}

{% endblock %}
